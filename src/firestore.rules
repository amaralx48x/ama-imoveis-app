
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(agentId) {
      return request.auth != null && request.auth.uid == agentId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /agents/{agentId} {
      allow read: if true;
      allow write: if isOwner(agentId) || isAdmin();

      match /reviews/{reviewId} {
        allow create: if true;
        allow list, get: if resource.data.approved == true;
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
      
      match /customSections/{sectionId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }
      
      match /themes/{themeId} {
        allow read: if true; // Public can read for site display
        allow write: if isOwner(agentId) || isAdmin();
      }

      match /leads/{leadId} {
        // Permitir criar leads
        allow create: if request.auth != null;

        // Permitir leitura do próprio corretor ou admin
        allow read: if request.auth != null && (request.auth.uid == agentId || isAdmin());

        // Permitir atualização ou exclusão apenas pelo dono ou admin
        allow update, delete: if isOwner(agentId) || isAdmin();
      }
    }

    match /{path=**}/properties/{propertyId} {
        allow read: if true;
        allow write: if false; 
    }
    
    match /agents/{agentId}/properties/{propertyId} {
      allow read;
      allow write: if isOwner(agentId) || isAdmin();
    }

    match /supportMessages/{messageId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin() || isOwner(resource.data.senderUid);
    }
  }
}
