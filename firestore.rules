
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(agentId) {
      return request.auth != null && request.auth.uid == agentId;
    }

    function isAdmin() {
      // Verifica se request.auth existe
      return request.auth != null && (
        request.auth.token.role == 'admin' ||
        (exists(/databases/$(database)/documents/agents/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Agent profiles
    match /agents/{agentId} {
      allow read: if true; // Público

      allow write: if isOwner(agentId) || isAdmin();

      // Subcollection for reviews
      match /reviews/{reviewId} {
        allow create: if true;
        allow list, get: if resource.data.approved == true;
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }

      // Subcollection for customSections
      match /customSections/{sectionId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Subcollection for leads
      match /leads/{leadId} {
        allow create: if true;
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }

      // Properties
      match /properties/{propertyId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }
    }

    // Support messages collection
    match /supportMessages/{messageId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Global collectionGroup for properties (apenas leitura pública)
    match /{path=**}/properties/{propertyId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
