rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Função para verificar se é o proprietário da mensagem/corretor
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Função para verificar se é admin via claim
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Coleção de mensagens de suporte
    match /supportMessages/{messageId} {
      // Corretores podem criar mensagens
      allow create: if request.auth != null;

      // Corretores podem apenas ler suas próprias mensagens
      allow read: if isOwner(resource.data.senderUid) || isAdmin();

      // Apenas admins podem atualizar/deletar mensagens
      allow update, delete: if isAdmin();
    }

    // Coleção de agentes/corretores
    match /agents/{agentId} {
      // Perfil público de agentes
      allow read: if true;

      // Apenas o próprio agente ou admin pode atualizar
      allow write: if isOwner(agentId) || isAdmin();

      // Subcoleções de propriedades
      match /properties/{propertyId} {
        allow read: if true; // público
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Subcoleção de avaliações
      match /reviews/{reviewId} {
        allow create: if true; // Qualquer um pode criar
        allow list, get: if resource.data.approved == true; // Público só lê aprovadas
        allow read, update, delete: if isOwner(agentId) || isAdmin(); // Dono/Admin gerencia tudo
      }
      
      // Subcoleção de seções customizadas
      match /customSections/{sectionId} {
        allow read: if true; // Público
        allow write: if isOwner(agentId) || isAdmin();
      }
      
      // Subcoleção de leads
      match /leads/{leadId} {
        // Permitir criar leads (formulário de contato público)
        allow create: if true;
        // Permitir leitura, atualização e exclusão apenas pelo dono ou admin
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
    }

    // Métricas globais (acesso restrito ao admin)
    match /metrics/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
