
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Funções auxiliares
    // =========================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role == 'admin';
    }

    // =========================
    // Coleção de agentes (corretores)
    // =========================
    match /agents/{agentId} {
      allow get: if true;
      allow list: if isAdmin();
      allow write: if isOwner(agentId) || isAdmin();

      // --- SUBCOLEÇÕES ---
      // Esta regra genérica aplica-se a todas as subcoleções como 
      // properties, contacts, reviews, etc.
      match /{subcollection}/{docId} {
        // O dono do perfil de agente (agentId) ou um admin pode ler e escrever
        // em qualquer documento de qualquer subcoleção.
        // A permissão de 'read' inclui 'get' e 'list'.
        // A permissão de 'write' inclui 'create', 'update', e 'delete'.
        allow read, write: if isOwner(agentId) || isAdmin();
      }
      
      // Regras mais específicas podem sobrescrever a regra genérica acima.
      // Por exemplo, a regra de criação de reviews é mais permissiva.
      match /reviews/{reviewId} {
        allow create: if isSignedIn(); // qualquer usuário autenticado pode criar
        // A leitura/escrita usa a regra genérica acima (isOwner ou isAdmin)
        // mas a listagem pública precisa ser permitida.
        allow list, get: if resource.data.approved == true || isOwner(agentId) || isAdmin();
        // A atualização e exclusão usam a regra genérica (isOwner ou isAdmin)
        allow update, delete: if isOwner(agentId) || isAdmin();
      }

      match /leads/{leadId} {
        allow create: if true; // formulário público pode criar leads
        // A leitura e manipulação usam a regra genérica (isOwner ou isAdmin)
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
    }

    // =========================
    // Mensagens de suporte
    // =========================
    match /supportMessages/{messageId} {
      allow read, write: if isAdmin();
      allow create: if isSignedIn();
      allow get: if isOwner(resource.data.senderId);
    }
    
    // =========================
    // Conteúdo da página de marketing
    // =========================
    match /marketing/content {
      allow get: if true;
      allow write: if isAdmin();
    }
  }
}
