
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(agentId) {
      return request.auth != null && request.auth.uid == agentId;
    }

    match /agents/{agentId} {
      allow read: if true;
      allow write: if isOwner(agentId);

      match /reviews/{reviewId} {
        allow create: if true;
        allow list, get: if resource.data.approved == true;
        allow read, update, delete: if isOwner(agentId);
      }
      
      match /customSections/{sectionId} {
        allow read: if true;
        allow write: if isOwner(agentId);
      }

      match /leads/{leadId} {
        allow create: if true; // The contact form will create leads here.
        allow read, update, delete: if isOwner(agentId);
      }
    }

    match /{path=**}/properties/{propertyId} {
        allow read: if true;
        allow write: if false; 
    }
    
    match /agents/{agentId}/properties/{propertyId} {
      allow read;
      allow write: if isOwner(agentId);
    }
  }
}
