rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Defines a helper function to check if the current user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Development rules: Allow any signed-in user to read/write anywhere.
     * This is insecure for production but useful for development.
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
