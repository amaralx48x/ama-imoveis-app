rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Funções auxiliares
    // =========================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role == 'admin';
    }

    // =========================
    // Coleção de agentes (corretores)
    // =========================
    match /agents/{agentId} {
      // Dono pode ler o próprio perfil, admins podem listar todos.
      allow get: if isOwner(agentId) || isAdmin();
      allow list: if isAdmin();
      // Escrever apenas dono ou admin
      allow write: if isOwner(agentId) || isAdmin();

      // Subcoleção de propriedades
      match /properties/{propertyId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Subcoleção de reviews
      match /reviews/{reviewId} {
        allow create: if isSignedIn(); // qualquer usuário autenticado
        allow list, get: if resource.data.approved == true || isOwner(agentId) || isAdmin(); 
        allow update, delete: if isOwner(agentId) || isAdmin();
      }

      // Subcoleção customSections
      match /customSections/{sectionId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Subcoleção leads
      match /leads/{leadId} {
        allow create: if true; // formulário público
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
    }

    // =========================
    // Mensagens de suporte
    // =========================
    match /supportMessages/{messageId} {
      // Admins têm acesso total
      allow read, write: if isAdmin();
      
      // Usuários autenticados podem criar mensagens
      allow create: if isSignedIn();

      // O autor da mensagem pode ler sua própria mensagem
      allow get: if isOwner(resource.data.senderId);
    }

    // =========================
    // Regras globais de propriedades (para pesquisa global)
    // =========================
    match /{path=**}/properties/{propertyId} {
      allow read: if true;
      allow write: if false; // Escrita apenas via subcoleção do agente
    }
  }
}
