
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Funções auxiliares
    // =========================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      // Checa se o usuário autenticado tem o campo 'role' como 'admin' em seu próprio documento de agente.
      return isSignedIn() && get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role == 'admin';
    }

    // =========================
    // Coleção de Agentes/Imobiliárias
    // =========================
    match /agents/{agentId} {
      // Qualquer usuário autenticado pode LER o perfil de qualquer agente para validação cruzada.
      allow get: if isSignedIn();
      // Apenas admins podem LISTAR todos os agentes.
      allow list: if isAdmin();
      // O próprio agente ou um admin podem escrever/atualizar seu perfil.
      allow write: if isOwner(agentId) || isAdmin();

      // --- SUBCOLEÇÕES ---

      // Imóveis de um agente
      match /properties/{propertyId} {
        // Leitura pública dos imóveis.
        allow list, get: if true;
        // Apenas o agente dono ou um admin podem criar/editar/excluir imóveis.
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Contatos de um agente
      match /contacts/{contactId} {
        allow read, write: if isOwner(agentId) || isAdmin();
      }

      // Avaliações de um agente
      match /reviews/{reviewId} {
        // Qualquer pessoa pode enviar uma avaliação.
        allow create: if true;
        // Avaliações aprovadas são públicas. O dono ou admin podem ver todas.
        allow list, get: if resource.data.approved == true || isOwner(agentId) || isAdmin();
        // Apenas o dono ou admin podem aprovar/excluir avaliações.
        allow update, delete: if isOwner(agentId) || isAdmin();
      }

      // Seções customizadas de um agente
       match /customSections/{sectionId} {
        // Leitura pública.
        allow list, get: if true;
        // Escrita restrita ao dono ou admin.
        allow write: if isOwner(agentId) || isAdmin();
      }

      // Leads de um agente
      match /leads/{leadId} {
        // Qualquer pessoa pode criar um lead (formulário de contato).
        allow create: if true;
        // Apenas o dono ou admin podem ler/gerenciar os leads.
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
    }
    
    // =========================
    // Coleção de Clientes (Stripe)
    // =========================
    match /customers/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      
      // Assinaturas de um cliente
      match /subscriptions/{subscriptionId} {
          allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // =========================
    // Mensagens de suporte
    // =========================
    match /supportMessages/{messageId} {
      // Apenas admins podem ler/escrever em todos os tickets.
      allow read, write: if isAdmin();
      // Usuários autenticados podem criar tickets.
      allow create: if isSignedIn();
      // O remetente pode ler seu próprio ticket.
      allow get: if isOwner(resource.data.senderId);
    }

    // =========================
    // Conteúdo da página de marketing
    // =========================
    match /marketing/content {
      // Leitura pública.
      allow get: if true;
      // Escrita apenas para admins.
      allow write: if isAdmin();
    }
    
    // =========================
    // SEO
    // =========================
    match /seo/{page} {
      // Leitura pública para que o Next.js possa renderizar os metadados no servidor.
      allow get: if true;
      // Ninguém pode listar todos os documentos de SEO.
      allow list: if false;
      // Admins podem escrever em qualquer página de SEO.
      // Corretores podem escrever apenas na sua própria página de SEO (`agent-<uid>`).
      allow write: if (isOwner(page.split('-')[1]) && page.startsWith('agent-')) || isAdmin();
    }
  }
}
