
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(agentId) {
      return request.auth != null && request.auth.uid == agentId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /agents/{agentId} {
      allow read: if true;
      allow write: if isOwner(agentId) || isAdmin();

      // Theme document as a subdocument of agent
      match /theme/{doc=**} {
        allow read: if true; // Publicly readable for the site
        allow write: if isOwner(agentId);
      }

      match /reviews/{reviewId} {
        allow create: if true;
        allow list, get: if resource.data.approved == true;
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
      
      match /customSections/{sectionId} {
        allow read: if true;
        allow write: if isOwner(agentId) || isAdmin();
      }

      match /leads/{leadId} {
        allow create: if true;
        allow read, update, delete: if isOwner(agentId) || isAdmin();
      }
    }

    match /{path=**}/properties/{propertyId} {
        allow read: if true;
        allow write: if false; 
    }
    
    match /agents/{agentId}/properties/{propertyId} {
      allow read;
      allow write: if isOwner(agentId) || isAdmin();
    }

    match /supportMessages/{messageId} {
      allow create: if request.auth != null;
      // Admins can read all messages, users can only read their own.
      allow read: if isAdmin() || isOwner(resource.data.senderId);
      // Only admins can update or delete support messages.
      allow update, delete: if isAdmin();
    }
  }
}
