
rules_version = '2';
service firebase.storage {
  match /b/ama-imveis-041125-945215-63275.appspot.com/o {

    // -----------------------
    // Funções auxiliares
    // -----------------------
    
    // Verifica se o usuário é admin
    function isAdmin() {
      return request.auth != null 
             && get(/databases/$(database)/documents/agents/$(request.auth.uid)).data.role == 'admin';
    }

    // Verifica se o usuário é dono
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // -----------------------
    // Imagens de marketing (página inicial)
    // -----------------------
    match /marketing/{allPaths=**} {
      // Leitura pública
      allow read: if true;
      // Escrita apenas para admins
      allow write: if isAdmin();
    }

    // -----------------------
    // Imagens de suporte
    // -----------------------
    match /support-images/{userId}/{fileName} {
      // Escrita permitida apenas pelo dono da pasta
      allow write: if isOwner(userId);
      // Leitura permitida pelo admin ou dono da pasta
      allow read: if isOwner(userId) || isAdmin();
    }

    // -----------------------
    // Imagens de perfil e imóveis de agentes
    // -----------------------
    match /agents/{agentId}/{allPaths=**} {
      // Leitura pública para que o site possa mostrar as imagens
      allow read: if true;
      // Escrita permitida apenas pelo dono do agente ou admin
      allow write: if isOwner(agentId) || isAdmin();
    }

    // -----------------------
    // Bloqueio padrão
    // -----------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
